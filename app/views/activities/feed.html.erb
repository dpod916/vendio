<div class="ibox ">
    <div class="table-responsive">
        <table class='table table-hover table-condensed'>
            <thead>
                <h5>Activity Feed</h5>
            </thead>
            <tbody id="public_activities">
            <div class="ibox-content-2">
                <div class="<%="activity-stream data-fetch-url=#{fetch_activity_path}"%>>"
                    <%= render @public_activities %>
                </div>
            </div>
            </tbody>
        </table>
        <div id="append_and_paginate" class="col-md-12">
            <%= will_paginate @public_activities %>
        </div>
    </div>
    </div>
</div>
