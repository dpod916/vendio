
   <%= simple_form_for([@amendable, extension], html: { class: 'form-horrizontal'}) do |f| %>

        <div class="row">
         <div class="col-md-12">
         	<div class="col-md-4">
	   			<%= "Current Expiration Date: #{@amendable.due_date}" %>
	   		</div>
	  		<div class="col-md-4">
	   			<%= f.input :due_date, as: :date, html5: true, label: "New Expiration Date" %>
	   			<%= f.input :start_date,  :as => :hidden, :input_html => { :value => @amendable.due_date } %>
	   		</div>
         </div>
        </div>
      
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <%= f.input :description, placeholder: "Enter a description of the Extension here....", label: false %>
            </div>
          </div>
        </div>

          <div class="form-group">

            <%= f.button :submit,  "Save", class: 'btn btn-primary pull-right'%>
          </div>
    <% end %>



            