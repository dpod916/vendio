<div class="ibox">
    <div class="ibox-content group-content">
        <h3><%= group_name %></h3>
        <div class="followers">
            <h5>Current</h5>
            <div class="feed-element">
                <% group.each do |follower| %>
                    <a href="<%= url_helper(follower) %>">
                        <img  alt="image" class="img-circle" src="<%= avatar_url(follower.profile) %>">
                    </a>
                <% end %>
            </div>

            <h5>Pending</h5>
            <div class="feed-element">
                <% pending_group.each do |follower| %>
                    <a href="<%= url_helper(follower) %>">
                        <img  alt="image" class="img-circle" src="<%= avatar_url(follower.profile) %>">
                    </a>
                <% end %>
            </div>

            <h5>Rejected</h5>
            <div class="feed-element">
                <% rejected_group.each do |follower| %>
                    <a href="<%= url_helper(follower) %>">
                        <img  alt="image" class="img-circle" src="<%= avatar_url(follower.profile) %>">
                    </a>
                <% end %>
            </div>
        </div>
    </div>
</div>
