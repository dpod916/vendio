$("#subjects_form").hide()

$("#subjects_button").click(function() {

            $("#subjects_form").show()
            $("#subjects_button").hide()

            $("[id$=subject_tokens]").tokenInput('/users.json', {
                prePopulate: $(this).data("pre"),
                theme: 'facebook',
                preventDuplicates: true
            })

})

